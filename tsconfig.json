{
  "include": ["./"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "example"
  ],
  "compilerOptions": {
    "lib": ["ES2017"],
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "outDir": "./",
    "declaration": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "types": []
  }
}
